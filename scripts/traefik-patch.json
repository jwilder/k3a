{
  "spec": {
    "template": {
      "spec": {
        "affinity": {
          "nodeAffinity": {
            "requiredDuringSchedulingIgnoredDuringExecution": {
              "nodeSelectorTerms": [
                {
                  "matchExpressions": [
                    {
                      "key": "kubemark",
                      "operator": "DoesNotExist"
                    },
                    {
                      "key": "node-role.kubernetes.io/control-plane",
                      "operator": "DoesNotExist"
                    },
                    {
                      "key": "node-role.kubernetes.io/worker",
                      "operator": "Exists"
                    }
                  ]
                }
              ]
            }
          }
        }
      }
    }
  }
}
